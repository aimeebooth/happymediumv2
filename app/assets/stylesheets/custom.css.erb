@import url(http://fonts.googleapis.com/css?family=Lobster);
@import url(http://fonts.googleapis.com/css?family=Lato);

body{
  font-family: 'Lato', sans-serif;
  font-size: 16px;
  color: #777;
}

h1, h2, h3, h4, h5, h6{
  font-family: 'Lobster', serif;
  text-transform: lowercase;
  color: rgba(252, 145, 162, 1);
}

h2{
  font-size: 24px;
  color: rgba(0, 61, 81, 1);
}

h2, h4{
  border-bottom: 1px solid #ccc;
  line-height: 48px;
  padding-left: 30px;
}

h2.page, h2.uncategorized,
h4.page, h4.uncategorized,
.uncategorized h4{
  background: url('<%= image_path("testimonials.png") %>') no-repeat left; 
}

h2.recipes,
h4.recipes,
.recipes h4{
  background: url('<%= image_path("nutrition.png") %>') no-repeat left; 
}

h2.running, h2.fitness,
h4.running, h4.fitness,
.running h4{
  background: url('<%= image_path("fitness.png") %>') no-repeat left; 
}

h2.travel, h2.wellness, h2.metrics,
h4.travel, h4.wellness, h4.metrics,
.travel h4, .wellness h4, .metrics h4{
  background: url('<%= image_path("lifestyle.png") %>') no-repeat left; 
}

a, a:hover, a:visited{
  color: rgba(252, 145, 162, 1);
}

strong{
  color: rgba(0, 61, 81, 1);
}

.container{
  width: 100%;
  margin: 0 auto;
  max-width: 2556px;
  padding: 0;
}

.masthead .inner{
  padding: 20px 200px;
  min-height: 190px;
}

.masthead h1{
  background: url('<%= image_path("logo_200x50.png") %>') no-repeat left;
  background-size: 50%;
  text-indent: -9999px;
  float: left;
  height: 100px;
  width: 400px;
  margin: 0;
}

.nav{
  float: right;
  padding: 10px 0;
  margin: 0;
}

.nav li{
  display: inline;
  text-align: center;
  float: left;
}

.nav li a{
  color: rgba(0, 61, 81, 1);
  font-family: 'Lobster', serif;
  text-transform: lowercase;
  font-size: 18px;
}

.nav li a:hover{
  background: transparent;
  color: rgba(0, 61, 81, .8);
}

.content{
  margin: 20px 0;
}

.row {
  margin: 0 200px;
}

.row img{
  border: 1px solid lightgray;
  padding: 2px;
  width: 60%;
  display: block;
  margin: 20px auto;
}

.related_posts{
  margin: 40px 0;
  border-top: 1px solid lightgray;
}

.related_posts h3{
  margin: 40px 0 15px;
  padding: 0 15px;
}

.related_posts ul{
  list-style-type: none;
  margin: 0; 
  padding: 0;
}

.related_posts li{
  float: left;
  position: relative;
  display: block;
  padding: 0 15px;
  max-width: 33%;
}

.footer{
  margin: 0;
  padding: 40px 0;
  text-align: center;
  font-family: 'Lobster', serif;
  text-transform: lowercase;
  font-size: 18px;
  color: rgba(0, 61, 81, 1);
}

.footer ul{
  padding: 0;
}

.footer li{
  list-style-type: none;
  display: inline-block;
}

.footer li a{
  height: 40px;
  width: 40px;
  margin: 0 2px;
  display: block;
  text-indent: -9999px;
}

.footer li #instagram{
  background: url('<%= image_path("instagram.png") %>') no-repeat center;
}

.footer li #pinterest{
  background: url('<%= image_path("pinterest.png") %>') no-repeat center;
}

.footer li #rss{
  background: url('<%= image_path("rss.png") %>') no-repeat center;
}