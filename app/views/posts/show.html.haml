.content
  .row
    - flash.each do |name, msg|
      = content_tag :div, msg, class: name
      
    %h2= @post.title
    %p
      = format_date(@post.created_at)
      \| 
      %em
        = @post.category_title
    %p= raw @post.body

    - if user_signed_in? && current_user.admin?
      = link_to 'Edit', edit_post_path(@post)
      \|
    = link_to 'Back', posts_path
